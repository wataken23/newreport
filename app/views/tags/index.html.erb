<h1>タグ一覧</h1>
<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
	<!-- メインコンテンツ  -->
	<table border="1">
	  <tr>
	    <th>Tag</th>
	    <th>Deadline</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	  
	  <% @tags.each do |tag| %>
	  <tr>
	    <td><%= tag.tag %></td>
	    <td><%= tag.deadline %></td>
	    <td><%= link_to 'Show', tag %></td>
	    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
	    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	  <% end %>
	</table>
	
	<br />
	
	<%= link_to '新規タグ作成', new_tag_path %>
      </div>
    </div>
    <div id="sidebox">
      <div id="sidemenu">
	<!-- サイドメニュー  -->
	<%= render 'shared/sidemenu_public' %>
      </div>
    </div>
  </div>
</div>

