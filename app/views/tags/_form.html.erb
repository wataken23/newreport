<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
	<!-- メインコンテンツ  -->
	<%= form_for(@tag) do |f| %>
	<% if @tag.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
	  
	  <ul>
	    <% @tag.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
	    <% end %>
	  </ul>
	</div>
	<% end %>
	
	<div class="field">
	  <%= f.label :tag %><br />
	  <%= f.text_field :tag %>
	</div>
	<div class="field">
	  <%= f.label :deadline %><br />
	  <%= f.text_field :deadline %>
	</div>
	<div class="actions">
	  <%= f.submit %>
	</div>
	<% end %>
      </div>
    </div>
    <div id="sidebox">
      <div id="sidemenu">
	<!-- サイドメニュー  -->
	<%= render 'shared/sidemenu_public' %>
      </div>
    </div>
  </div>
</div>

