<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
        <div class="field">
        <!-- メインコンテンツ  -->
        <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

          <%= f.label :avatar %><br />
           <% if @user.avatar? %>
            <%= image_tag @user.avatar.thumb %>
            <%= f.hidden_field :avatar_cache if @user.avatar_cache %>
            <label><%= f.check_box :remove_avatar %>Remove avatar</label>
            <% end %>
            <%= f.file_field :avatar %><br />
         </div>
	<div class="actions">
	  <%= f.submit %>
	</div>
        <% end %>
      </div>
    </div>
    <div id="sidebox">
      <div id="sidemenu">
	<!-- サイドメニュー  -->
	<%= render 'shared/sidemenu_public' %>
      </div>
    </div>
  </div>
</div>
