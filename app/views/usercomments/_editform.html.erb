<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
	<!-- メインコンテンツ  -->
	<b>レポート投稿者:</b>
	<%= @user.account %>
	<table width="700px" border="0" cellspacing="1" bgcolor="#c71585">
	  <tr bgcolor="#c71585" align="left">
	    <th>
	      <p>
		<font color="#ffffff">
		  <b>Title:</b>
		  <%= @repbody.title %>
		</font>
	      </p>
	      
	    </th>
	  </tr>
	  <tr>
	    <td bgcolor="#ffffff">
	      <pre><%=raw preautolink(@repbody.body) %></pre>
	    </td>
	  </tr>
	</table>
	
	<%= form_for([current_user, @repbody, @comment, @usercomment]) do |f| %>
	<% if @usercomment.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@usercomment.errors.count, "error") %> prohibited this comment from being saved:</h2>
	  
	  <ul>
	    <% @usercomment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
	    <% end %>
	  </ul>
	</div>
	<% end %>
	<div class="field">
	  <%= f.hidden_field :user_id %><br />
	  
	</div>
	<div class="field">
	  <%= f.hidden_field :repbody_id %><br />
	</div>
	
	<div class="field">
	  <%= f.label :コメント本文 %><br />
	  <%= f.text_area :body %>
	</div>
	<div class="actions">
	  <%= f.submit %>
	</div>
	<% end %>
      </div>
    </div>
    <div id="sidebox">
      <div id="sidemenu">
	<!-- サイドメニュー  -->
	<%= render 'shared/sidemenu_public' %>
      </div>
    </div>
  </div>
</div>
